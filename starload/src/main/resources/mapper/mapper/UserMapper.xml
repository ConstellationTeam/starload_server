<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.fastcampus.eatgo.domain.BoardRepository">
    <resultMap type="kr.hs.dgsw.tlss.domain.User" id="result">
        <result property="userCode" column="user_code" />
        <result property="userEmail" column="user_email" />
        <result property="userid" column="userid" />
        <result property="userEmail" column="user_name" />
        <result property="userpw" column="userpw" />
        <result property="userPhoneNumber" column="user_pone_number" />
    </resultMap>

    <sql id="sql_select">
        SELECT
            a.user_code
             , a.user_email
             , a.userid
             , a.user_name
             , a.userpw
             , a.user_pone_number
    </sql>

    <select id="get" resultMap="result">
        <include refid="sql_select"></include>
        FROM user AS a
        WHERE a.user_code = #{user_code}
    </select>

    <select id="getByEmail" resultMap="result">
        <include refid="sql_select"></include>
        FROM user AS a
        WHERE a.user_email = #{user_email}
    </select>

    <insert id="register" parameterType="com.example.starload.domain.User"
            useGeneratedKeys="true" keyProperty="userIdx">

        INSERT INTO user
        (
          user_email
        , userid
        , user_name
        , userpw
        , user_pone_number
        )
        VALUES
            (
              #{user_email}
            , #{userid}
            , #{user_name}
            , #{userpw}
            , #{user_pone_number}
            );

    </insert>

</mapper>